        <eu.alessiobianchi.floatlabel.FloatLabel
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textfield_selected"
            android:hint="Lorem ipsum dolor sit amet 1"
            android:inputType="text"/>

        <eu.alessiobianchi.floatlabel.FloatLabel
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lorem ipsum dolor sit amet 2"
            android:inputType="number"/>

        <eu.alessiobianchi.floatlabel.FloatLabel
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="600dp"
            android:hint="Lorem ipsum dolor sit amet 3"
            android:inputType="textPassword"/>

    </LinearLayout>

</ScrollView>
